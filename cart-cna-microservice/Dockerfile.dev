FROM gradle:8-jdk17-alpine

# Update latest security patches
RUN apk update && apk upgrade

# Install common development tools
RUN apk add --no-cache \
    git \
    bash \
    curl \
    vim \
    nano

# Set working directory
WORKDIR /app

# Copy gradle files
COPY build.gradle settings.gradle gradlew ./
COPY gradle/ gradle/

# Use the system gradle instead of wrapper to avoid download
# This uses the pre-installed Gradle 8 from the base image
RUN gradle dependencies --no-daemon

# Copy source code
COPY . .

# Make scripts executable
RUN chmod +x gradlew && \
    chmod +x devspace_start.sh && \
    chmod +x setup.sh

# Build the application without running tests (skip tests for local dev)
RUN gradle clean build -x test --no-daemon

# Create a non-root user for development
RUN addgroup -g 1001 -S spring && \
    adduser -S springuser -u 1001 -G spring

# Change ownership of the app directory
RUN chown -R springuser:spring /app

# Switch to non-root user
USER springuser